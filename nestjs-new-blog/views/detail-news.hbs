<a href="http://localhost:3000/news/all" class="btn btn-primary m-1" role="button" data-bs-toggle="button">ко всем новостям</a>
{{#if news}}
  <div class="card mb-3" style="width: 100%;">
    {{#if news.cover}}
        <img src="{{news.cover}}" style="height: 200px; object-fit: cover;" class="card-img-top" alt="...">
    {{/if}}
    <div class="card-body">
      <h5 class="card-title">{{news.title}}</h5>
      <h6 class="card-subtitle mb-2 text-muted">{{news.author}}</h6>
      <p class="card-text">{{news.description}}</p>
    </div>
    <div class="d-flex flex-row-reverse">
      <a href="http://localhost:3000/comments/create/{{news.id}}" class="btn btn-primary m-1" role="button" data-bs-toggle="button">комментировать</a>
      <a href="http://localhost:3000/news/edit/news/{{news.id}}" class="btn btn-primary m-1" role="button" data-bs-toggle="button">редактировать</a>
    </div>
  </div>
{{#if comments}}
    {{#each comments}}
      <div class="list-group">
        <a href="{{#unless this.blockcomment}}http://localhost:3000/comments/create/{{../news.id}}?idComment={{this.id}}{{else}}#{{/unless}}" class="list-group-item {{#unless this.blockcomment}}list-group-item-action{{/unless}} d-flex gap-3 py-3" aria-current="true">
          <img src="{{#if this.avatar}}{{this.avatar}}{{else}}http://norapc.org/wp-content/uploads/2015/07/avatar-blank.png{{/if}}" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0">{{this.author}}</h6>
              <p class="mb-0 opacity-75">{{this.message}}</p>
            </div>
          </div>
        </a>
        {{#if this.reply}}
          <h6 class="my-2">Ответы:</h6>
          <div class="mb-3">
          {{#each this.reply}}
              <a href="#" class="list-group-item d-flex gap-3 py-3" aria-current="true">
                <img src="{{#if this.avatar}}{{this.avatar}}{{else}}http://norapc.org/wp-content/uploads/2015/07/avatar-blank.png{{/if}}" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
                <div class="d-flex gap-2 w-100 justify-content-between">
                  <div>
                    <h6 class="mb-0">{{this.author}}</h6>
                    <p class="mb-0 opacity-75">{{this.message}}</p>
                  </div>
                </div>
              </a>
          {{/each}}
          </div>
        {{/if}}
      </div>
    {{/each}}
{{else}}
  <h3>нет комментариев</h3>
{{/if}}
{{else}}
  <h1>Новость отсутствует!</h1>
{{/if}}
